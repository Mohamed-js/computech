<h1 class="text-center mb-3">
    اضافة منتج جديد
</h1>

<%= form_with(model: @product, class:"container") do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div class="field form-group">
    <%= form.label "اسم المنتج" %>
    <%= form.text_field :name, class:"form-control", required: true %>
  </div>

  <div class="field form-group">
    <%= form.label "سعر الشراء" %>
    <%= form.number_field :buying_price, class:"form-control" , step: :any, required: true %>
  </div>

  <div class="field form-group">
    <%= form.label "سعر البيع" %>
    <%= form.number_field :selling_price, class:"form-control" , step: :any, required: true %>
  </div>

  <div class="field form-group">
    <%= form.label "سعر بيع الجملة" %>
    <%= form.number_field :whole_sale_price, class:"form-control" , step: :any, required: true %>
  </div>

  <div class="field form-group">
    <%= form.label "الكمية المراد ادخالها" %>
    <%= form.number_field :quantity, class:"form-control", required: true %>
  </div>

  <div class="actions">
    <%= form.submit "اضافة المنتج", class:"btn bg-gradient-tertiary white", data: { disable_with: "انتظر..." } %>
  </div>
<% end %>

<div class="container mt-2">
    <%= link_to 'رجوع للخلف', root_path, class:"btn btn-secondary" %>
</div>
